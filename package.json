{
  "name": "pokeapi-app",
  "version": "1.0.0",
  "description": "PokeAPI app",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "client:dev": "rm -rf client/dist && webpack-dev-server --env.mode development --open --hot",
    "build:client-dev": "rm -rf client/dist && webpack --env.mode development",
    "build:client-prod": "rm -rf client/dist && webpack --env.mode production"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*{.js,jsx}": [
      "eslint --fix",
      "git add"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rotimi-babalola/pokeapi-app.git"
  },
  "keywords": [
    "pokemon",
    "pokeapi"
  ],
  "author": "Rotimi Babalola",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/rotimi-babalola/pokeapi-app/issues"
  },
  "homepage": "https://github.com/rotimi-babalola/pokeapi-app#readme",
  "devDependencies": {
    "babel-jest": "^24.8.0",
    "css-loader": "^2.1.1",
    "eslint": "^5.16.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-plugin-import": "^2.17.2",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-react": "^7.13.0",
    "husky": "^2.2.0",
    "jest": "^24.8.0",
    "lint-staged": "^8.1.6",
    "node-sass": "^4.12.0",
    "sass-loader": "^7.1.0",
    "style-loader": "^0.23.1",
    "uninstall": "0.0.0",
    "webpack-cli": "^3.3.2",
    "webpack-dev-server": "^3.3.1"
  },
  "dependencies": {
    "@babel/core": "^7.4.4",
    "@babel/plugin-proposal-object-rest-spread": "^7.4.4",
    "@babel/plugin-transform-arrow-functions": "^7.2.0",
    "@babel/plugin-transform-runtime": "^7.4.4",
    "@babel/preset-env": "^7.4.4",
    "@babel/preset-react": "^7.0.0",
    "axios": "^0.19.0",
    "babel-loader": "^8.0.5",
    "enzyme": "^3.9.0",
    "enzyme-adapter-react-16": "^1.13.0",
    "expect": "^24.8.0",
    "html-webpack-plugin": "^3.2.0",
    "lodash": "^4.17.19",
    "optimize-css-assets-webpack-plugin": "^5.0.1",
    "prop-types": "^15.7.2",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-router-dom": "^5.0.0",
    "uglifyjs-webpack-plugin": "^2.1.2",
    "webpack": "^4.31.0",
    "webpack-merge": "^4.2.1"
  },
  "jest": {
    "moduleNameMapper": {
      "^.+\\.(css|less|scss)$": "babel-jest"
    },
    "setupFiles": [
      "<rootDir>/client/src/setupTests.js"
    ]
  }
}
